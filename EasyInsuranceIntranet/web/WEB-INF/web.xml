<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>justcopyserv</servlet-name>
        <servlet-class>Servlets.justcopyserv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createCustomer</servlet-name>
        <servlet-class>Servlets.createCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createVehicle</servlet-name>
        <servlet-class>Servlets.createVehicle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCompensation</servlet-name>
        <servlet-class>Servlets.addCompensation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pendingCompensations</servlet-name>
        <servlet-class>Servlets.pendingCompensations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modifyCompensation</servlet-name>
        <servlet-class>Servlets.modifyCompensation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>justcopyserv</servlet-name>
        <url-pattern>/justcopyserv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createCustomer</servlet-name>
        <url-pattern>/createCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createVehicle</servlet-name>
        <url-pattern>/createVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCompensation</servlet-name>
        <url-pattern>/addCompensation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pendingCompensations</servlet-name>
        <url-pattern>/pendingCompensations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifyCompensation</servlet-name>
        <url-pattern>/modifyCompensation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
